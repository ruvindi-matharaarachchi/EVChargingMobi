<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Hardware Features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.location" android:required="false" />
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EVChargingMobi"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        
        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- Main Activities -->
        <activity
            android:name=".ui.auth.AuthActivity"
            android:exported="true"
            android:theme="@style/Theme.EVChargingMobi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.owner.OwnerHostActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobi" />

        <activity
            android:name=".ui.operator.OperatorHostActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobi" />

        <activity
            android:name=".ui.owner.ReservationActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobi" />

        <activity
            android:name=".ui.owner.QrCodeActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobi" />

        <activity
            android:name=".ui.operator.QrScannerActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobi" />

        <activity
            android:name=".ui.operator.BookingConfirmActivity"
            android:exported="false"
            android:theme="@style/Theme.EVChargingMobi" />

    </application>

</manifest>
